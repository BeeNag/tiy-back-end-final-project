<div class="container-fluid">
	<div class="row">
		<h1 class="text-center">Here are the <%= @games.count %> games available for <%= @platform.title %><br /><small>There are <%= @tips %> tips for these games</small></h1>
	</div>
	<div class="row">
		<div class="col-xs-6">
			<table class="table table-hover table-bordered table-striped text-center">
				<thead>
					<tr>
						<th class="text-center">Title</th>
					</tr>
				</thead>
				<tbody>
					<% @games.each do |game| %>
					<tr>
						<td><%= link_to(game.title, game_tips_path(game)) %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-1 col-xs-offset-3">
			<a role="button" class="btn btn-info back-button" href="/">Back to Home Page</a>
		</div>
		<div class="col-xs-1 col-xs-offset-4">
			<p><a class="btn btn-info" href="<%= new_platform_game_path(@platform, @game) %>" role="button">Add a New Game</a></p>
		</div>
	</div>
</div>
