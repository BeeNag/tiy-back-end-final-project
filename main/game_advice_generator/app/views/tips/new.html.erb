<div class="container-fluid">
	<div class="row">
		<h1 class="text-center">Add a new tip</h1>
	</div>
	<div class="row text-center">
		<%= form_for [@game, @tip] do |f| %>
			<p>
				<%= f.label :body %>
				<%= f.text_field :body, autofocus: true %>
			</p>
			<p>
				<%= f.submit 'Submit', class: 'btn btn-primary' %>
			</p>
		<% end %>
	</div>
</div>